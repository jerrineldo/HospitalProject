@model Red_Lake_Hospital_Redesign_Team6.Models.ViewModels.JobPostingsViewModel

@{
    ViewBag.Title = "JobApply";
}

<h2>Job Application Form</h2>


@using (Html.BeginForm("postJobApply", "JobsView", FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Position: @Model.PostingTitle (Job Posting ID: @Model.PostingId)</h4>
    <p class="text-danger">* denotes required fields</p>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <input type="hidden" name="PostingId" value="@Model.PostingId">

    <div class="form-group">
        <label for="ApplicantFirstName" class="control-label col-md-2">First Name:<span class="text-danger">*</span></label>
        <div class="col-md-10">
            <input type="text" name="ApplicantFirstName" class="form-control text-box single-line" />
        </div>
    </div>

    <div class="form-group">
        <label for="ApplicantLastName" class="control-label col-md-2">Last Name:<span class="text-danger">*</span></label>
        <div class="col-md-10">
            <input type="text" name="ApplicantLastName" class="form-control text-box single-line" />
        </div>
    </div>

    <div class="form-group">
        <label for="ApplicantEmail" class="control-label col-md-2">Email:<span class="text-danger">*</span></label>
        <div class="col-md-10">
            <input type="email" name="ApplicantEmail" class="form-control text-box single-line" />
        </div>
    </div>

    <div class="form-group">
        <label for="ApplicantPhone" class="control-label col-md-2">Phone:</label>
        <div class="col-md-10">
            <input type="tel" name="ApplicantPhone" class="form-control text-box single-line" />
        </div>
    </div>

    <div class="form-group">
        <label for="newCvPackage" class="control-label col-md-2">Attach cover letter and resume (submit one file in PDF format):<span class="text-danger">*</span></label>
        <div class="col-md-10">
            <input type="file" id="newCvPackage" name="newCvPackage">
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Submit" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to Current Job Opportunities", "JobPostingsList")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
