@model Red_Lake_Hospital_Redesign_Team6.Models.ViewModels.TestimonialDetails
@{
    ViewBag.Title = "DeleteConfirm";
}


<h3>Are you sure you want to delete this Testimonial of Department : @Model.DepartmentDto.DepartmentName?</h3>
<hr />
@using (Html.BeginForm("DeleteTestimonial", "Testimonial", FormMethod.Post))
{
    <div class="card departmentdetails-card" style="width: 18rem;">
        <div class="card-body">
            <h3 class="card-title">@Model.TestimonialDto.first_Name @Model.TestimonialDto.last_Name </h3>
            <p class="card-text">@Html.Raw(@Model.TestimonialDto.testimonial_Content)</p>
            <div class="department-button">
                <input type="hidden" name="TestimonialId" value="@Model.TestimonialDto.testimonial_Id" />
                <input type="hidden" name="DepartmentId" value="@Model.DepartmentDto.DepartmentId" />
                <input type="submit" value="Delete" class="btn btn-primary department-button" />
            </div>
        </div>
    </div>
}


<div>
    @Html.ActionLink("Back to Department Details", "DetailsofDepartment", "Department", new { Id = Model.DepartmentDto.DepartmentId }, null)
</div>