@model Red_Lake_Hospital_Redesign_Team6.Models.ViewModels.TestimonialDetails

@{
    ViewBag.Title = "UpdateTestimonial";
}

<h1>Department : @Model.DepartmentDto.DepartmentName</h1>
<h2>Update Testimonial</h2>

@using (Html.BeginForm("UpdateTestimonial", "Testimonial", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.TestimonialDto.testimonial_Id)

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.DepartmentDto.DepartmentId)

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.DepartmentDto.DepartmentId)

        @Html.HiddenFor(model => model.TestimonialDto.Id)

        @Html.HiddenFor(model => model.TestimonialDto.Approved)

        <div class="form-group">
            @Html.LabelFor(model => model.TestimonialDto.testimonial_Content, "Content :", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.TextAreaFor(model => model.TestimonialDto.testimonial_Content, new { htmlAttributes = new { @class = "form-control", Name = "TestimonialDto_testimonial_Content" } })
                @Html.ValidationMessageFor(model => model.TestimonialDto.testimonial_Content, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TestimonialDto.first_Name, "First Name :", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TestimonialDto.first_Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TestimonialDto.first_Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TestimonialDto.last_Name, "Last Name :", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TestimonialDto.last_Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TestimonialDto.last_Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TestimonialDto.email, "Email :", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TestimonialDto.email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TestimonialDto.email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TestimonialDto.phone_Number, "Phone Number :", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TestimonialDto.phone_Number, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TestimonialDto.phone_Number, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TestimonialDto.posted_Date, "Posted Date :", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TestimonialDto.posted_Date, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TestimonialDto.posted_Date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label for="TestimonialPic">Picture:</label>
                <input type="file" name="TestimonialPic" id="TestimonialPic" class="choosefile" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @*<input type="hidden" value="@Model.TestimonialDto.UserId" name="UserId"/>*@
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Department Details", "DetailsofDepartment", "Department", new { Id = Model.DepartmentDto.DepartmentId }, null)
</div>