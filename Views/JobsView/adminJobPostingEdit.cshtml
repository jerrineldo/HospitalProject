@model Red_Lake_Hospital_Redesign_Team6.Models.ViewModels.JobPostingsViewModel

@{
    ViewBag.Title = "JobPostingEdit";
}


<h2>Edit Job Posting (Selected Application No: @Model.PostingId)</h2>
<p class="text-danger">*** This area is restricted to administrative users only ***</p>
<p>Edit the selected job posting record from this page.</p>
<hr />


@using (Html.BeginForm("postAdminJobPostingEdit", "JobsView", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <input type="hidden" name="PostingId" value="@Model.PostingId" />

        <input type="hidden" name="ApplicationUserId" value="@Model.ApplicationUserId" />


        <div class="form-group">
            @Html.LabelFor(model => model.PostingTitle, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PostingTitle, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PostingTitle, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PostingDescription, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PostingDescription, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PostingDescription, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PostingRemuneration, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PostingRemuneration, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PostingRemuneration, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PostingDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PostingDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PostingDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PostingExpiryDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PostingExpiryDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PostingExpiryDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="DepartmentId" class="control-label col-md-2">Hiring Department</label>
            <div class="col-md-10">
                <select name="DepartmentId" class="form-control">
                    @foreach (var department in Model.DepartmentsList)
                    {
                        <option value="@department.DepartmentId" @(department.DepartmentId == Model.DepartmentId ? "selected" : "")>@department.DepartmentName</option>
                    }
                </select>
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Job Postings List", "adminJobPostingsList")
</div>
